---
import { Icon } from "astro-icon/components";
import { FACEBOOK_URL, INSTAGRAM_URL, WHATSAPP_URL } from "astro:env/client";
---

<header class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-50">
	<div class="max-w-6xl mx-auto px-4 flex sm:flex-row flex-col items-center justify-between py-4 gap-y-2">
		<div class="logo flex-shrink-0">
			<img src="/src/assets/logo-adisv-nombre.png" alt="ADISV Logo" class="h-10 w-auto" />
		</div>
		<nav>
			<ul class="flex list-none m-0 p-0 gap-4 md:gap-8 flex-col sm:flex-row">
				<li class="text-center">
					<a href="/" class="text-gray-700 no-underline font-medium px-2 py-1 md:px-4 md:py-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-primary-50 hover:text-gray-900">
						Inicio
					</a>
				</li>
				<li class="text-center">
					<a href="/about" class="text-gray-700 no-underline font-medium px-2 py-1 md:px-4 md:py-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-primary-50 hover:text-gray-900">
						Quienes somos
					</a>
				</li>
				<li class="text-center">
					<a href="/contact" class="text-gray-700 no-underline font-medium px-2 py-1 md:px-4 md:py-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-primary-50 hover:text-gray-900">
						Contacto
					</a>
				</li>
			</ul>
		</nav>
		<div class="flex items-center gap-x-4 mt-4 md:mt-0">
			<a href={FACEBOOK_URL} target="_blank" class="text-primary-900 no-underline font-medium p-1.5 md:p-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-primary-50 hover:text-gray-900">
				<Icon name="simple-icons:facebook" class="w-6 h-6" />
			</a>
			<a href={INSTAGRAM_URL} target="_blank" class="text-primary-900 no-underline font-medium p-1.5 md:p-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-primary-50 hover:text-gray-900">
				<Icon name="simple-icons:instagram" class="w-6 h-6" />
			</a>
			<a href={WHATSAPP_URL} target="_blank" class="bg-secondary-400 text-white no-underline font-medium px-2 py-1.5 md:px-4 md:py-2 text-sm md:text-base rounded-md transition-all duration-200 hover:bg-secondary-600 hover:text-white">
				<Icon name="simple-icons:whatsapp" class="w-6 h-6" />
			</a>
		</div>
	</div>
</header>
